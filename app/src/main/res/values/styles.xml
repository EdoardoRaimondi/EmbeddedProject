<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- Floating button-->
    <style name="FloatStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">@dimen/float_button_margin</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
    </style>

    <!-- Main presentation of fragment -->
    <style name="MainStyle">
        <item name="android:background">@color/absoluteWhite</item>
        <item name="android:orientation">vertical</item>
    </style>

    <!-- Floating button container-->
    <style name="FloatContainer">
        <item name="android:orientation">horizontal</item>
        <item name="android:layout_marginRight">@dimen/float_container_margin_lateral</item>
        <item name="android:layout_marginLeft">@dimen/float_container_margin_lateral</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_marginBottom">@dimen/float_container_margin_lateral</item>
    </style>

    <!-- Radius button-->
    <style name="RadiusButtonStyle">
        <item name="android:textColor">@color/absoluteWhite</item>
        <item name="elevation">@dimen/rad_btn_elevation</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/rad_btn_t_s</item>
        <item name="android:textAlignment">center</item>
        <item name="android:padding">@dimen/rad_btn_pading</item>
    </style>

    <!-- List item -->
    <style name="word_title">
         <item name="android:layout_width">match_parent</item>
         <item name="android:layout_height">wrap_content</item>
         <item name="android:textSize">24sp</item>
         <item name="android:textStyle">bold</item>
     </style>

    <!-- Label style -->
    <style name="Label">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/absoluteBlack</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAlignment">center</item>
    </style>

</resources>
